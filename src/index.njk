---
layout: layouts/base.njk
title: Home
---
<section class="section__home-hero">
  <div class="container">
    <h1 class="home-hero__title">
      {{ site.description  }}
    </h1>
    {% if home.hero.link_text %}<a class="home-hero__link" href="{{ home.hero.link_href}}">{{ home.hero.link_text }}</a>{% endif %}
    {% include "zero.svg" %}

  </div>
</section>

<section class="section__home-intro" id="home-intro">
  <div class="container">
    <div class="intro__copy">
      <h2 class="intro__title">{{ home.intro.title }}</h2>
      {{ home.intro.description | markdownify | safe }}
    </div>

    <div class="intro__projects" id="home-projects">
      {% for project in home.projects %}
        <div class="intro__project">
          <h3 class="project__title">{{ project.title }}</h3>
          <p class="project__description">{{ project.description }}</p>
          {% if project.link %}
            <a class="button type-{{ loop.index }}" href="{{ project.link }}">Find out more</a>
          {% else %}
            <a class="button type-{{ loop.index }}">More info coming soon</a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="section__home-pipeline" id="home-pipeline">

  <h2 class="section-title">{{ home.ideas.title }}</h2>
  {% if home.ideas.subtitle %}<p class="section-subtitle">{{ home.ideas.subtitle}}</p>{% endif %}

  <div class="container">
      {% set latest_pipeline = collections.pipeline | reverse | first %}
      <div class="pipeline__item pipeline__item--featured">
        <a href="{{ latest_pipeline.url }}" class="pipeline__image">
          {% srcset latest_pipeline.data.image, latest_pipeline.data.image_alt, "thinking__item__image", 640, 360, "(min-width: 1120px) 690px, (min-width: 720px) 66vw, 50vw" %}
        </a>
        <div class="pipeline__text">
          <div class="pipeline__item__count">01</div>
          <h3 class="pipeline__title">{{ latest_pipeline.data.title }}</h3>
          <p>{{ latest_pipeline.data.intro }}</p>
          <a class="button type-3" href="{{ latest_pipeline.url }}">Talk to us</a>
        </div>
      </div>

      <div class="pipeline__sidebar">
        <div class="pipeline__item pipeline__item--suggest">
          <div class="pipeline__icon">
            {% include "lightbulb.svg" %}
          </div>
          <div class="pipeline__text">
            <h3 class="pipeline__title">Have an idea?</h3>
            <p>If thereâ€™s an issue in Leeds you think we should look into, <a href="mailto:info@zerowasteleeds.org.uk">tell us about it</a>.</p>
          </div>
        </div>
        {% for pipeline in collections.pipeline | reverse | slice(1,3) -%}
            <div class="pipeline__item">
              <a href="{{ pipeline.url }}" class="pipeline__image">
                {% srcset pipeline.data.image, collections.pipeline[0].data.image_alt, "thinking__item__image", 360, 202, "(min-width: 1120px) 310px, 30vw" %}
              </a>
              <div class="pipeline__text">
                <h3 class="pipeline__title">{{ pipeline.data.title }}</h3>
                <div class="pipeline__footer">
                  <a class="button type-{{loop.index}}" href="{{ pipeline.url }}">Add your ideas</a>
                  <div class="pipeline__item__count">0{{ loop.index + 1 }}</div>
                </div>
              </div>
            </div>
        {% endfor %}
      </div>
  </div>
</section>

<section class="section__home-supporters" id="home-supporters">
  <div class="container">
    {% include "supporters.svg" %}
    <div class="hire__text">
      <h2 class="section-title">{{ home.supporters.title | nl2br | safe }}</h2>
      {{ home.supporters.description | markdownify | safe}}
      <a class="button button__large button__inverted type-4" href="{{ home.supporters.link.url }}">{{ home.supporters.link.text }}</a>
    </div>
  </div>
</section>

<section class="section__home-tips" id="home-tips">
  <h2 class="section-title">{{ home.tips.title }}</h2>
  {% if home.tips.subtitle %}<p class="section-subtitle">{{ home.tips.subtitle}}</p>{% endif %}

  <div class="container">
    {%- for tip in collections.tips | reverse | limit(3) -%}
    <div class="home-tips__article">
      <a href="{{tip.url}}" class="home-tips__image">
        {% srcset tip.data.image, tip.data.image_alt, null, 300, 300, "(min-width: 1120px) 300px, 25vw" %}
      </a>
      <div class="home-tips__text">
        <h3 class="home-tips__title">{{ tip.data.title }}</h3>
        <p>{% excerpt tip %}</p>
        <a class="button type-{{loop.index + 2}}" href="{{ tip.url }}">Read more</a>
      </div>
    </div>
    {%- endfor -%}
  </div>
  <div class="container align-center">
      <a href="/tips/" class="button button__read-more button__large type-3">See more of our waste reducing tips</a>
  </div>
</section>

<section class="section__home-hire" id="home-hire">
  <div class="container">
    {% include "hire.svg" %}
    <div class="hire__text">
      <h2 class="section-title">{{ home.hire.title | nl2br | safe }}</h2>
      {{ home.hire.description | markdownify | safe}}
      <a class="button button__large button__inverted type-2" href="{{ home.hire.link.url }}">{{ home.hire.link.text }}</a>
    </div>
  </div>
</section>

<section class="section__home-thinking" id="home-thinking">
  <h2 class="section-title">{{ home.blog.title }}</h2>
  {% if home.blog.subtitle %}<p class="section-subtitle">{{ home.blog.subtitle}}</p>{% endif %}

  <div class="container">
    {% set featuredPost = collections.posts | reverse | first %}
    <div class="thinking__featured-item">
      <a href="{{ featuredPost.url }}" class="thinking__item__image">
          {% srcset featuredPost.data.image, featuredPost.data.image_alt, "thinking__item__image", 640, 360, "(min-width: 1120px) 536px, 100vw" %}
      </a>
      <h3 class="thinking__item__title">{{ featuredPost.data.title }}</h3>
      <p>{{ featuredPost.templateContent | striptags | truncate(120) }}</p>
      <a class="button type-5" href="{{ featuredPost.url}}">Learn more</a>
    </div>
    <div class="thinking__sidebar">
      {% for post in collections.posts | reverse | slice(1,4) -%}
      <div class="thinking__item">
        <a href="{{ post.url }}" class="thinking__item__image">
          {% srcset post.data.image, featuredPost.data.image_alt, "thinking__item__image", 320, 240, "(min-width: 1120px) 172px, 30vw" %}
        </a>
        <div class="thinking__item__text">
          <h3 class="thinking__item__title">{{ post.data.title }}</h3>
          <p>{{ post.templateContent | striptags | truncate(60) }}</p>
          <a class="button type-{{loop.index + 1}}" href="{{ post.url }}">Learn more</a>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="container align-center">
    <a href="/blog/" class="button button__read-more button__large type-4">See more of our thinking</a>
  </div>
</section>